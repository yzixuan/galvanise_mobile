<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:textColor="@color/asphaltColor"
            android:id="@+id/tv_menu_item_name"
            android:layout_toRightOf="@+id/img_thumbnail"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tv_menu_item_price"
            android:layout_below="@+id/tv_menu_item_name"
            android:layout_alignLeft="@+id/tv_menu_item_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tv_order_quantity"
            android:layout_below="@+id/tv_menu_item_price"
            android:layout_alignLeft="@+id/tv_menu_item_price" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:paddingBottom="10dp"
            android:id="@+id/tv_order_subtotal"
            android:layout_below="@+id/tv_order_quantity"
            android:layout_alignLeft="@+id/tv_order_quantity" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#ffd5d5d5"
            android:id="@+id/linea"
            android:layout_below="@+id/tv_order_subtotal"
            android:layout_toRightOf="@+id/img_thumbnail">
        </View>

        <TextView
            android:id="@+id/change_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linea"
            android:layout_toRightOf="@+id/img_thumbnail"
            android:paddingLeft="10dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:textColor="#fff"
            android:background="@color/asphaltColor"
            android:text="CHANGE QUANTITY"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remove_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

    </RelativeLayout>
</android.support.v7.widget.CardView>