<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zee.galvanisemobile.PrePayPalActivity">

    <TextView
        android:text="Your Table Number is"
        android:gravity="center"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:textColor="#fff"
        android:background="@color/accentColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tableNumber"
        android:textSize="50dp"
        android:gravity="center"
        android:textColor="#fff"
        android:paddingBottom="20dp"
        android:background="@color/accentColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Shopping Cart Info !-->
    <LinearLayout
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="10dp"
            android:id="@+id/nav_list_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_category_shopping"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/asphaltColor"
                android:text="No. of Items: 0"
                android:id="@+id/cart_quantity" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/asphaltColor"
                android:text="@string/empty_payable"
                android:id="@+id/total_payable" />

        </LinearLayout>

    </LinearLayout>

    <!-- Recycler View (List of Finalised Order Items) !-->
    <fragment
        android:id="@+id/finalized_fragment_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:name="com.example.zee.galvanisemobile.FinalisedCartFragment"
        tools:layout="@layout/fragment_finalised_cart" />

    <!-- Checkout Button !-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make E-Payment"
        android:background="@color/primaryColor"
        android:onClick="onClick_goPayPal"
        android:id="@+id/goPayPal" />

</LinearLayout>
